#!/usr/bin/env ruby

require 'sounder'
require_relative '../lib/humpday'

if ARGV.size == 1 && ARGV[0] == 'random'
  Humpday.random
elsif ARGV.size == 1 && ARGV[0] != '-h' && ARGV[0] != 'help' && ARGV[0] != '--help'
  begin
    Humpday.play ARGV[0]
  rescue Humpday::UnknownSoundError
    abort "#{ARGV[0]} does not match a known sound"
  end
else
  puts Humpday.usage
end

